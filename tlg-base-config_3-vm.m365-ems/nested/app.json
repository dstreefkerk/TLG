{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SharedVmConfig": {
      "type": "object"
    },
    "vmName": {
      "type": "string"
    },
    "nicName": {
      "type": "string"
    },
    "modulesURL": {
      "type": "string"
    },
    "configurationFunction": {
      "type": "object"
    },
    "shutDownTime": {
      "type": "string"
    },
    "vstsPersonalAccessToken": {
      "type": "securestring",
      "metadata": {
        "description": "The personal access token to connect to VSTS"
      }
    },
    "vstsAgentCount": {
      "type": "int",
      "metadata": {
        "description": "The number of Visual Studio Team Services agents to be configured on the Virtual Machine. Default is 3"
      },
      "allowedValues": [1, 2, 3, 4],
      "defaultValue": 3
    },
    "vstsDeploymentGroupName": {
      "type": "string",
      "metadata": {
        "description": "The Visual Studio Team Services agent deployment group name"
      }
    },
    "vstsCollectionName": {
      "type": "string",
      "metadata": {
        "description": "The Visual Studio Team Services agent deployment collection name"
      }
    },
    "vstsProjectName": {
      "type": "string",
      "metadata": {
        "description": "The Visual Studio Team Services agent deployment project name"
      }
    },
    "vstsServerUrl": {
      "type": "string",
      "metadata": {
        "description": "Your DevOps URL"
      }
    },
    "modules": {
      "type": "array",
      "metadata": {
        "description": "Enter the Module(s) to install including the Version"
      },
      "defaultValue": [
        {
          "name": "AzureRM",
          "version": "5.6.0"
        },
        {
          "name": "AzureAD",
          "version": "2.0.1.3"
        },
        {
          "name": "posh-git",
          "version": "0.7.1"
        }
      ]
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
      },
      "defaultValue": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/201-vm-vsts-agent"
    }
  },
  "variables": {
    "firstExtensionSuffix": "/JoinDomain",
    "firstExtensionName": "[concat(parameters('vmName'),variables('firstExtensionSuffix'))]",
    "names": {
      "vm": "[concat('vm-vsts-', substring(uniqueString(resourceGroup().id), 0, 6))]"
    },
    "singleQuote": "'",
    "powerShell": {
      "script": "InstallVstsAgent.ps1",
      "folder": "scripts",
      "parameters": "[concat(' -PersonalAccessToken ', parameters('vstsPersonalAccessToken'), ' -AgentCount ', parameters('vstsAgentCount'), ' -Modules ', variables('modules'), ' -DeploymentGroupName ' , parameters('vstsDeploymentGroupName'), ' -CollectionName ', parameters('vstsCollectionName'), ' -ProjectName ', parameters('vstsProjectName'), ' -ServerUrl ', parameters('vstsServerUrl'))]"
    },
    "modules": "[replace(replace(replace(replace(replace(string(parameters('modules')), '[{\"', '@(@{'), '\":\"', concat(' = ', variables('singleQuote'))), '\",\"', concat(variables('singleQuote'), '; ')), '\"},{\"', concat(variables('singleQuote'), '}, @{')), '\"}]', concat(variables('singleQuote'), '})'))]"
  },
  "resources": [
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[parameters('SharedVmConfig').location]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('SharedVmConfig').vmSize]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('SharedVmConfig').adminUsername]",
          "adminPassword": "[parameters('SharedVmConfig').adminPassword]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('SharedVmConfig').serverOS]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage"
          },
          "dataDisks": []
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[reference(concat('Microsoft.Storage/storageAccounts/',parameters('SharedVmConfig').storageAccountNamePrefix),'2017-06-01').primaryEndpoints.blob]"
          }
        }
      },
      "resources": [
        {
          "name": "vstsAgent",
          "type": "extensions",
          "location": "[parameters('SharedVmConfig').location]",
          "apiVersion": "2017-03-30",
          "dependsOn": ["[variables('names').vm]"],
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.9",
            "settings": {
              "fileUris": [
                "[uri(parameters('_artifactsLocation'), concat(variables('powerShell').folder, '/', variables('powerShell').script, parameters('SharedVmConfig').sasToken))]"
              ]
            },
            "protectedSettings": {
              "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -Command \"& {', './', variables('powerShell').script, ' ', variables('powerShell').parameters, '}\"')]"
            }
          }
        }
      ]
    },
    {
      "apiVersion": "2017-03-30",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[variables('firstExtensionName')]",
      "location": "[parameters('SharedVmConfig').location]",
      "tags": {
        "displayName": "Join Domain"
      },
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "JsonADDomainExtension",
        "typeHandlerVersion": "1.3",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "Name": "[parameters('SharedVmConfig').domainName]",
          "OUPath": null,
          "Options": "3",
          "Restart": "true",
          "User": "[parameters('SharedVmConfig').domainUserName]"
        },
        "protectedsettings": {
          "Password": "[parameters('SharedVmConfig').adminPassword]"
        }
      },
      "dependsOn": ["[parameters('vmName')]"]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/AppConfig')]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]",
        "[concat('Microsoft.Compute/virtualMachines/',parameters('vmName'),'/extensions/JoinDomain')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "protectedSettings": {
          "Items": {}
        },
        "settings": {
          "modulesUrl": "[concat(parameters('modulesURL'),'/AppConfig.ps1.zip')]",
          "sasToken": "[parameters('SharedVmConfig').SasToken]",
          "wmfVersion": "latest",
          "configurationFunction": "[parameters('configurationFunction').AppConfig]",
          "Properties": {
            "DomainName": "[parameters('SharedVmConfig').domainName]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/BGInfo')]",
      "apiVersion": "2017-03-30",
      "scale": null,
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]",
        "[concat('Microsoft.Compute/virtualMachines/',parameters('vmName'),'/extensions/JoinDomain')]"
      ],
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "BGInfo",
        "typeHandlerVersion": "2.1",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "properties": []
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/Antimalware')]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]",
        "[concat('Microsoft.Compute/virtualMachines/',parameters('vmName'),'/extensions/JoinDomain')]"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Security",
        "type": "IaaSAntimalware",
        "typeHandlerVersion": "1.1",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "AntimalwareEnabled": true,
          "Exclusions": {
            "Paths": "C:\\Users",
            "Extensions": ".txt",
            "Processes": "taskmgr.exe"
          },
          "RealtimeProtectionEnabled": "true",
          "ScheduledScanSettings": {
            "isEnabled": "true",
            "scanType": "Quick",
            "day": "7",
            "time": "120"
          }
        },
        "protectedSettings": null
      }
    },
    {
      "type": "Microsoft.DevTestLab/schedules",
      "name": "[concat('shutdown-computevm-',parameters('vmName'))]",
      "apiVersion": "2016-05-15",
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[concat('Microsoft.Compute/virtualMachines/',parameters('vmName'))]"
      ],
      "properties": {
        "status": "Enabled",
        "taskType": "ComputeVmShutdownTask",
        "dailyRecurrence": {
          "time": "[parameters('shutDownTime')]"
        },
        "timeZoneId": "Greenwich Standard Time",
        "notificationSettings": {},
        "targetResourceId": "[resourceId('Microsoft.Compute/virtualMachines',parameters('vmName'))]"
      }
    }
  ],
  "outputs": {}
}
